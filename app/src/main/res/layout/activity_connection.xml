<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gloveyglove.android.ConnectionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Accupressure has begun.\n Feel your hands now"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:src="@drawable/image_hand"/>

            <EditText
                android:id="@+id/edit_text_send_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter data here to send via bluetooth"/>

            <Button
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Send"/>

            <TextView
                android:id="@+id/textView_received_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Text Received will be displayed here."/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
